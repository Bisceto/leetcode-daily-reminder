{
  "compilerOptions": {
    "target": "es2016", // You can use "es2017" or higher if Node.js supports it
    "module": "commonjs",
    "outDir": "./dist", // Compiled JavaScript files will go into the "dist" folder
    "rootDir": "./src", // TypeScript source files are expected in the "src" folder
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Specifies all files in the "src" folder
  "exclude": ["node_modules", "dist"] // Excludes unnecessary folders from compilation
}
